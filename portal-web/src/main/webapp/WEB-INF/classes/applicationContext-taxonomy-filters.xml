	<!-- Filter helpers -->
	<bean id="dataProviderTaxonPicklistHelper" class="org.gbif.portal.web.content.dataset.DataProviderTaxonPicklistHelper">
		<property name="dataResourceManager" ref="dataResourceManager"/>
	</bean>	
</beans>